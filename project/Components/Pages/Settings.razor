@page "/settings"
@layout MainLayout
@using System.Diagnostics


<div class="members-container">
    <div class="page-header">
        <h1 class="page-title">Settings</h1>
    </div>

    <div class="settings-container">
        <!-- Gym Info -->
        <div class="settings-card">
            <h3>🏢 Gym Information</h3>
            <div class="form-group">
                <label>Gym Name</label>
                <input type="text" class="form-control" @bind="GymName" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea class="form-control" @bind="Address" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>Contact Number</label>
                <input type="text" class="form-control" @bind="ContactNumber" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" @bind="Email" />
            </div>
            <button class="btn btn-save" @onclick="@(() => SaveSettings("Gym Info"))">Save</button>
        </div>

        <!-- System Logs -->
        <div class="settings-card">
            <h3>📊 System Logs</h3>
            <div class="logs-info">
                <p><strong>Last 7 days activity:</strong></p>
                <div class="log-stats">
                    <div class="stat-item">
                        <span class="stat-label">Total Logs:</span>
                        <span class="stat-value">@SystemLogs.Count</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Last Updated:</span>
                        <span class="stat-value">@LastLogUpdate.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                </div>
            </div>

            <div class="logs-actions">
                <button class="btn btn-secondary" @onclick="ViewLogs">View All Logs</button>
                <button class="btn btn-secondary" @onclick="ExportLogs">Export Logs</button>
                <button class="btn btn-clear" @onclick="ClearOldLogs">Clear Old Logs</button>
            </div>

            <div class="recent-logs">
                <h4>Recent Activity</h4>
                @if (SystemLogs.Any())
                {
                    <div class="log-list">
                        @foreach (var log in SystemLogs.Take(5))
                        {
                            <div class="log-item">
                                <div class="log-time">@log.Timestamp.ToString("MM/dd HH:mm")</div>
                                <div class="log-action">@log.Action</div>
                                <div class="log-user">@log.User</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="no-logs">No recent activity</p>
                }
            </div>
        </div>
    </div>
</div>

<Component2 />

@code {
    // Gym Information
    private string GymName { get; set; } = "PowerHouse Gym";
    private string Address { get; set; } = "123 Fitness Street, Quezon City, Philippines 1100";
    private string ContactNumber { get; set; } = "+63 912 345 6789";
    private string Email { get; set; } = "info@powerhousegym.com";

    // System Logs
    private List<SystemLog> SystemLogs { get; set; } = new();
    private DateTime LastLogUpdate { get; set; } = DateTime.Now;

    protected override void OnInitialized()
    {
        LoadSampleLogs();
    }

    private void LoadSampleLogs()
    {
        SystemLogs = new List<SystemLog>
        {
            new SystemLog { Timestamp = DateTime.Now.AddMinutes(-30), Action = "Member check-in: John Doe", User = "System" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-1), Action = "Payment received: ₱1,500", User = "Admin" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-2), Action = "New member registration", User = "Staff" },
            new SystemLog { Timestamp = DateTime.Now.AddHours(-4), Action = "Settings updated", User = "Admin" },
            new SystemLog { Timestamp = DateTime.Now.AddDays(-1), Action = "Monthly report generated", User = "System" },
            new SystemLog { Timestamp = DateTime.Now.AddDays(-2), Action = "Equipment maintenance logged", User = "Staff" }
        };
        LastLogUpdate = DateTime.Now;
    }

    private void SaveSettings(string section)
    {
        // Add to system logs
        SystemLogs.Insert(0, new SystemLog
        {
            Timestamp = DateTime.Now,
            Action = $"{section} updated",
            User = "Admin"
        });

        Debug.WriteLine($"{section} settings saved.");
        StateHasChanged();
    }

    private void ViewLogs()
    {
        Debug.WriteLine("Viewing all system logs...");
        // Implement full log view functionality
    }

    private void ExportLogs()
    {
        Debug.WriteLine("Exporting system logs...");
        // Implement log export functionality
    }

    private void ClearOldLogs()
    {
        SystemLogs.RemoveAll(log => log.Timestamp < DateTime.Now.AddDays(-30));
        LastLogUpdate = DateTime.Now;
        Debug.WriteLine("Old logs cleared.");
        StateHasChanged();
    }

    private class SystemLog
    {
        public DateTime Timestamp { get; set; }
        public string Action { get; set; } = string.Empty;
        public string User { get; set; } = string.Empty;
    }
}

