</style>

@code {
    private List<Trainer> trainers = new();
    private List<Trainer> filteredTrainers = new();
    private Trainer currentTrainer = new();

    private bool isModalOpen = false;
    private bool isEditMode = false;
    private string searchQuery = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadTrainers();
    }

    private async Task LoadTrainers()
    {
        trainers = await TrainerService.GetTrainersAsync();
        filteredTrainers = trainers;
    }

    private void FilterTrainers()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredTrainers = trainers;
        }
        else
        {
            filteredTrainers = trainers
                .Where(t =>
                    t.FirstName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    t.LastName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    t.Specialty.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void AddTrainer()
    {
        isModalOpen = true;
        isEditMode = false;
        currentTrainer = new Trainer();
    }

    private void EditTrainer(Trainer trainer)
    {
        isEditMode = true;
        isModalOpen = true;

        currentTrainer = new Trainer
        {
            TrainerID = trainer.TrainerID,
            FirstName = trainer.FirstName,
            MiddleName = trainer.MiddleName,
            LastName = trainer.LastName,
            ContactNumber = trainer.ContactNumber,
            Specialty = trainer.Specialty
        };
    }

    private async Task SaveTrainer()
    {
        if (isEditMode)
        {
            await TrainerService.UpdateTrainerAsync(currentTrainer);
        }
        else
        {
            await TrainerService.AddTrainerAsync(currentTrainer);
        }

        await LoadTrainers();
        CloseModal();
    }

    private async Task DeleteTrainer(Trainer trainer)
    {
        await TrainerService.DeleteTrainerAsync(trainer);
        await LoadTrainers();
    }

    private void CloseModal()
    {
        isModalOpen = false;
    }
}

