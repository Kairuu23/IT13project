@page "/trainers"
@layout MainLayout
@using project.Models
@using project.Data
@inject AppDbContext _db
@using project.Services
@inject TrainerService TrainerService


    
<div class="members-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Manage Trainers</h1>

        <div class="header-actions">
            <input type="text"
                   class="search-bar"
                   placeholder="Search Trainer..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="FilterTrainers" />

            <button class="add-member-btn" @onclick="AddTrainer">+ Add Trainer</button>
        </div>
    </div>

    <!-- Trainers Table -->
    <div class="table-container">
        <table class="members-table">
            <thead>
                <tr>
                    <th>TRAINER ID</th>
                    <th>NAME</th>
                    <th>CONTACT NUMBER</th>
                    <th>SPECIALTY</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @if (filteredTrainers == null || !filteredTrainers.Any())
                {
                    <tr>
                        <td colspan="5" class="no-data">
                            <div class="no-data-content">
                                <span class="no-data-icon">🏋️</span>
                                <p>No trainers found</p>
                                <p class="no-data-sub">Add your first trainer to get started</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var trainer in filteredTrainers)
                    {
                        <tr>
                            <td>@trainer.TrainerID</td>
                            <td>
                                <div class="member-info">
                                    <div class="member-avatar">
                                        @trainer.FirstName.Substring(0, 1).ToUpper()
                                    </div>
                                    <span>@trainer.FirstName @trainer.LastName</span>
                                </div>
                            </td>
                            <td>@trainer.ContactNumber</td>
                            <td>@trainer.Specialty</td>
                            <td>
                                <div class="action-buttons">

                                    <button class="action-btn edit-btn"
                                            title="Edit"
                                            @onclick="() => EditTrainer(trainer)">
                                        <img src="/icons/edit_blue.svg" class="action-icon" />
                                    </button>

                                    <button class="action-btn delete-btn"
                                            title="Delete"
                                            @onclick="() => DeleteTrainer(trainer)">
                                        <img src="/icons/delete_red.svg" class="action-icon" />
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Add / Edit Trainer Modal -->
    @if (isModalOpen)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation="true">

                <div class="modal-header">
                    <h2>@(isEditMode ? "Edit Trainer" : "Add New Trainer")</h2>
                    <button class="close-btn" @onclick="CloseModal">×</button>
                </div>

                <div class="modal-body">

                    <div class="form-row">
                        <div class="form-group">
                            <label class="required">First Name</label>
                            <input class="form-control" @bind="currentTrainer.FirstName" />
                        </div>

                        <div class="form-group">
                            <label>Middle Name</label>
                            <input class="form-control" @bind="currentTrainer.MiddleName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="required">Last Name</label>
                        <input class="form-control" @bind="currentTrainer.LastName" />
                    </div>

                    <div class="form-group">
                        <label class="required">Contact Number</label>
                        <input class="form-control" @bind="currentTrainer.ContactNumber" />
                    </div>

                    <div class="form-group">
                        <label class="required">Specialty</label>
                        <select class="form-control" @bind="currentTrainer.Specialty">
                            <option value="">-- Select Specialty --</option>
                            <option>Strength Training</option>
                            <option>Cardio</option>
                            <option>Yoga</option>
                            <option>Pilates</option>
                            <option>CrossFit</option>
                            <option>Personal Training</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-save" @onclick="SaveTrainer">
                        @(isEditMode ? "Update" : "Add") Trainer
                    </button>
                </div>
            </div>
        </div>
    }
</div>


