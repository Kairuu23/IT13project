@page "/trainers"
@layout MainLayout
@using project.Models
@using project.Data
@inject AppDbContext _db

<h3 class="text-center mb-4">Trainers</h3>

<div class="d-flex justify-content-between mb-3">
    <input class="form-control w-50" placeholder="Search Trainer..." @oninput="FilterTrainers" />
    <button class="btn btn-primary" @onclick="AddTrainer">Add Trainer</button>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Contact Number</th>
            <th>Specialty</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (filteredTrainers != null && filteredTrainers.Any())
        {
            @foreach (var trainer in filteredTrainers)
            {
                <tr>
                    <td>@trainer.FirstName</td>
                    <td>@trainer.MiddleName</td>
                    <td>@trainer.LastName</td>
                    <td>@trainer.ContactNumber</td>
                    <td>@trainer.Specialty</td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => EditTrainer(trainer)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteTrainer(trainer)">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="7" class="text-center">No trainers found.</td></tr>
        }
    </tbody>
</table>

@if (isModalOpen)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@((isEditMode ? "Edit Trainer" : "Add Trainer"))</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label>First Name</label>
                        <input class="form-control" @bind="currentTrainer.FirstName" />
                    </div>

                    <div class="mb-3">
                        <label>Middle Name</label>
                        <input class="form-control" @bind="currentTrainer.MiddleName" />
                    </div>

                    <div class="mb-3">
                        <label>Last Name</label>
                        <input class="form-control" @bind="currentTrainer.LastName" />
                    </div>

                    <div class="mb-3">
                        <label>Contact Number</label>
                        <input class="form-control" @bind="currentTrainer.ContactNumber" />
                    </div>

                    <!-- ✅ SPECIALTY DROPDOWN ADDED (Only change) -->
                    <div class="mb-3">
                        <label>Specialty</label>
                        <select class="form-control" @bind="currentTrainer.Specialty">
                            <option value="">-- Select Specialty --</option>
                            <option value="Strength Training">Strength Training</option>
                            <option value="Cardio Conditioning">Cardio Conditioning</option>
                            <option value="Flexibility & Mobility">Flexibility & Mobility</option>
                        </select>
                    </div>
                    <!-- END CHANGE -->

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-success" @onclick="SaveTrainer">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Trainer> trainers = new();
    private List<Trainer> filteredTrainers = new();
    private Trainer currentTrainer = new();
    private bool isModalOpen = false;
    private bool isEditMode = false;

    protected override void OnInitialized()
    {
        LoadTrainers();
    }

    private void LoadTrainers()
    {
        trainers = _db.Trainers.OrderBy(t => t.TrainerID).ToList();
        filteredTrainers = trainers;
        StateHasChanged();
    }

    private void FilterTrainers(ChangeEventArgs e)
    {
        string search = e.Value?.ToString()?.ToLower() ?? "";
        filteredTrainers = trainers.Where(t =>
            t.FirstName.ToLower().Contains(search) ||
            t.LastName.ToLower().Contains(search) ||
            t.Specialty.ToLower().Contains(search)
        ).ToList();
    }

    private void AddTrainer()
    {
        currentTrainer = new Trainer();
        isEditMode = false;
        isModalOpen = true;
    }

    private void EditTrainer(Trainer trainer)
    {
        currentTrainer = trainer;
        isEditMode = true;
        isModalOpen = true;
    }

    private void SaveTrainer()
    {
        if (!isEditMode)
        {
            _db.Trainers.Add(currentTrainer);
        }

        _db.SaveChanges();
        LoadTrainers();
        CloseModal();
    }

    private void DeleteTrainer(Trainer trainer)
    {
        _db.Trainers.Remove(trainer);
        _db.SaveChanges();
        LoadTrainers();
    }

    private void CloseModal()
    {
        isModalOpen = false;
    }
}
